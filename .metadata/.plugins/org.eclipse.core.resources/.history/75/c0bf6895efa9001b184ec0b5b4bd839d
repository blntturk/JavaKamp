package oopIntro;

public class Main {

	public static void main(String[] args) {

		Product product1 = new Product(1, "Lenovo 14", 15000, "16 Gb Ram", 10, 13500); // örnek-referans-intance
																						// oluþturma.
		// Product classýndaki imzaya uyduk.
		// product1.id=1;
		// product1.name="Lenovo 14";
		// product1.unitPrice = 15000;
		// product1.detail ="16 Gb Ram";

		Product product2 = new Product(); // örnek-referans-intance oluþturma.(Product türünde bir deðiþken olusturduk)
		product2.id = 2;
		product2.name = "Lenovo 15";
		product2.unitPrice = 16000;
		product2.detail = "32 Gb Ram";
		product2.discount = 10;
		product2.unitPriceAfterDiscount = 14400;
		Product product3 = new Product(); // örnek-referans-intance oluþturma.
		product3.id = 3;
		product3.name = "HP 5";
		product3.unitPrice = 10000;
		product3.detail = "8 Gb Ram";

		Product[] products = { product1, product2, product3 }; // Array

		for (Product product : products) { // döngü

			System.out.println(product.name);
		}

		System.out.println(products.length);

		Category category1 = new Category();
		category1.id = 1;
		category1.name = "Bilgisayar";

		Category category2 = new Category();
		category2.id = 2;
		category2.name = "Ev/Bahce";

		Category category3 = new Category(3, "Oyuncak"); // Category class taki imzaya uygun diðer yazým sekli

		Category[] categorys = { category1, category2, category3 };

		for (Category category : categorys) {
			System.out.println(category.name);
		}

		ProductManager productManager = new ProductManager();
		productManager.addToCart(product1);

		productManager.addToCart(product2);

		productManager.addToCart(product3);

		productManager.delFromCart(product3);
	}

}
